@model IEnumerable<excelwebtest2.Controllers.User>

@{
    ViewBag.Title = "DatatablesTest";
}

<h2>DatatablesTest</h2>
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet"/>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="tbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.USUA_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USUA_NOMBRE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USUA_APELLIDO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USUA_USUARIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USUA_PASSWORD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USUA_TEST)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USUA_TEST_2)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_APELLIDO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_USUARIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_PASSWORD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_TEST)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USUA_TEST_2)
            </td>
        </tr>
    }
</tbody>

</table>

@section scripts{
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script>
    $(function () {
        $("#tbl").DataTable({
            columns:[{data: "USUA_ID"}, {data:"USUA_NOMBRE"}, {data:"USUA_NOMBRE"}, {data:"USUA_USUARIO"}, {data:"USUA_PASSWORD"}, {data:"USUA_TEST"}, {data:"USUA_TEST_2"}],
            deferRender: true,
            ajax: {
                url: "/home/GetData",
                dataSrc: function (d) { return d },
            }
        })
    });
</script>        
}

